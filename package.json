{
  "name": "vpetersson-com",
  "version": "2.0.0",
  "description": "Viktor Petersson's personal site - built with Hugo",
  "repository": "https://github.com/vpetersson/vpetersson.com.git",
  "author": "Viktor Petersson",
  "license": "MIT",
  "scripts": {
    "lint": "bun run lint:markdown && bun run lint:scss && bun run typecheck",
    "lint:markdown": "dprint check \"**/*.md\"",
    "lint:markdown:fix": "dprint fmt \"**/*.md\"",
    "lint:scss": "stylelint \"**/*.scss\"",
    "lint:scss:fix": "stylelint \"**/*.scss\" --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "lunr": "^2.3.9",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/lunr": "^2.3.7",
    "dprint": "^0.50.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "typescript": "^5.7.2"
  }
}
